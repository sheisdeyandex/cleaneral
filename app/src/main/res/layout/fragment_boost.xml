<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.FragmentBoost">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:id="@+id/iv_back"
        app:layout_constraintStart_toEndOf="@+id/cgl_start"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/cgl_start"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl_scan"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/iv_big_circle"
            app:layout_constraintWidth_percent="0.27"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pb_progress"
            app:layout_constraintBottom_toBottomOf="@+id/pb_progress"
            android:src="@drawable/ic_loading_big"
            />
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/iv_small_circle"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.17"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_big_circle"
            app:layout_constraintBottom_toBottomOf="@+id/iv_big_circle"
            android:src="@drawable/ic_loading_small"
            />
        <ProgressBar
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_height="0dp"
            android:progress="0"
            android:id="@+id/pb_progress"
            android:layout_centerInParent="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_scan"
            android:layout_above="@+id/tv_scan"
            android:layout_marginBottom="10dp"
            android:indeterminateDrawable="@drawable/loading_drawable"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Сканирование\nОЗУ..."
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#2D2D2D"
            android:textSize="22sp"
            android:textAlignment="center"
            android:id="@+id/tv_scan"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl_cool"
        android:visibility="gone"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Найдено"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/cgl_top_peregreto"
            android:textColor="#2D2D2D"
            android:id="@+id/tv_peregreto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="236,3 MB"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:id="@+id/tv_temperature"
            app:layout_constraintTop_toBottomOf="@+id/tv_peregreto"
            android:textColor="#2D2D2D"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:id="@+id/cgl_top_peregreto"
            app:layout_constraintGuide_percent="0.05"
            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:id="@+id/cgl_top_apps_run"
            app:layout_constraintGuide_percent="0.2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Запущенные приложения"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/cgl_top_apps_run"
            android:textColor="#2D2D2D"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:id="@+id/cgl_top"
            app:layout_constraintGuide_percent="0.3"
            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:id="@+id/cgl_top_small"
            app:layout_constraintGuide_percent="0.4"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:lottie_rawRes="@raw/boost_real_anim"
            app:layout_constraintHeight_percent="0.3"
android:id="@+id/lav_boost"
            app:lottie_autoPlay="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
<Button
    android:layout_width="match_parent"
    app:layout_constraintTop_toBottomOf="@+id/lav_boost"
    app:layout_constraintBottom_toBottomOf="parent"
android:background="#7385f4"
    android:layout_height="0dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_clean"
            android:text="@string/boost_text"

            app:backgroundTint="@null"
            android:background="@drawable/gradient_button"
            app:layout_constraintTop_toBottomOf="@+id/cgl_clean"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/cgl_clean"
            app:layout_constraintGuide_percent="0.85"
            android:orientation="horizontal"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>